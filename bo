#!/bin/bash

pdflatex main 
bibtex main
pdflatex main
pdflatex main

EXIT_STATE=$?

if [ $OSTYPE = "darwin12" ]
then	
	if [ $EXIT_STATE -eq 0 ]
	then open main.pdf &
	else echo 'Build Failed. Not opening pdf'
	fi
elif [ $OSTYPE = 'linux-gnu' ]
then
	if [ $EXIT_STATE -eq 0 ] 
	then evince main.pdf &
	else echo 'Build Failed. Not opening pdf'
	fi
fi
